{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "SwitchOS",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "windows": {
                "command": "${command:remote-containers.reopenInContainer}",
                "options": {
                    "statusbar": {"label" : "<Open Container - Go to Ubuntu>","hide" : false}
                }
            },
            "linux": {
                "command": "${command:remote-containers.reopenLocally}",
                "options": {
                    "statusbar": {"label" : "<Close Container - Go to Windows>","hide" : false}
                }
            }
        },
        {
            "label": "RunDebug",
            "command": "${command:workbench.action.debug.start}",
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {"label" : "<Debug>","hide" : false}
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "CompileDebug",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "windows":{
                "command": "${workspaceFolder}\\BuildEXE.bat",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "HB_VFP_ROOT":"C:\\Harbour_VFP",
                        "HB_ORM_ROOT":"C:\\Harbour_ORM",
                        "HB_FASTCGI_ROOT":"C:\\Harbour_FastCGI",
                        "EXEName":"DataWharf",
                        "BuildMode":"debug",
//                        "HB_COMPILER":"${input:CCompiler}",
                        "HB_COMPILER":"mingw64",
                        "WebsiteDrive":"C:",
                        "SiteRootFolder":"\\Harbour_websites\\fcgi_DataWharf\\"
                    },
                    "statusbar": {"label" : "<Compile Debug>","hide" : false}
                },
                "dependsOrder": "sequence",
                "dependsOn":["SoftKillFcgiExe"]
            },
            "linux":{
                "command": "sh ${workspaceFolder}/BuildEXE.sh",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "HB_VFP_ROOT":"/src/Harbour_VFP",
                        "HB_ORM_ROOT":"/src/Harbour_ORM",
                        "HB_FASTCGI_ROOT":"/src/Harbour_FastCGI/",
                        "EXEName":"DataWharf",
                        "BuildMode":"debug",
                        "HB_COMPILER":"gcc",
                        "WebsiteDrive":"",
                        "SiteRootFolder":"/var/www/Harbour_websites/fcgi_DataWharf/"
                    },
                    "statusbar": {"label" : "<Compile Debug>","hide" : false}
                },
                "dependsOrder": "sequence",
                "dependsOn":["SoftKillFcgiExe"]
            }
        },
        {
            "label": "CompileRelease",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "windows":{
                "command": "${workspaceFolder}\\BuildEXE.bat",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "HB_VFP_ROOT":"C:\\Harbour_VFP",
                        "HB_ORM_ROOT":"C:\\Harbour_ORM",
                        "HB_FASTCGI_ROOT":"C:\\Harbour_FastCGI",
                        "EXEName":"DataWharf",
                        "BuildMode":"release",
                        // "HB_COMPILER":"${input:CCompiler}",
                        "HB_COMPILER":"mingw64",
                        "WebsiteDrive":"C:",
                        "SiteRootFolder":"\\Harbour_websites\\fcgi_DataWharf\\"
                    },
                    "statusbar": {"label" : "<Compile Release>","hide" : false}
                },
                "dependsOrder": "sequence",
                "dependsOn":["SoftKillFcgiExe"]
            },
            "linux":{
                "command": "sh ${workspaceFolder}/BuildEXE.sh",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "HB_VFP_ROOT":"/src/Harbour_VFP",
                        "HB_ORM_ROOT":"/src/Harbour_ORM",
                        "HB_FASTCGI_ROOT":"/src/Harbour_FastCGI",
                        "EXEName":"DataWharf",
                        "BuildMode":"release",
                        "HB_COMPILER":"gcc",
                        "WebsiteDrive":"",
                        "SiteRootFolder":"/var/www/Harbour_websites/fcgi_DataWharf/"
                    },
                    "statusbar": {"label" : "<Compile Release>","hide" : false}
                },
                "dependsOrder": "sequence",
                "dependsOn":["SoftKillFcgiExe"]
            }
        },
        {
            "label": "DelAllPPO",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {"label" : "<Del All PPO>","hide" : false}
            },
            "presentation": {"reveal": "never"},
            "windows":{
                "command": "del ${workspaceFolder}\\*.ppo",
            },
            "linux":{
                "command": "rm ${workspaceFolder}/ *.ppo",
            }
        },
        {
            "label": "DelBuildCache",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {"label" : "<Del Build Caches>","hide" : false}
            },
            "presentation": {"reveal": "never"},
            "windows":{
                "command": "rd ${workspaceFolder}\\build\\win64\\ /Q /S"
            },
            "linux":{
                "command": "rm -rf ${workspaceFolder}/build/lin64/"
            }
        },
        {
            "type": "shell",
            "label": "Down",
            "isBackground": true,
            "presentation": {"reveal": "never"},
            "windows":{
                "options": {
                    "cwd": "${workspaceFolder}",
                    "statusbar": {"label" : "<Down>","hide" : false}
                },
                "command": "C:\\Harbour_FastCGI\\FCGITaskManagerBin\\FCGITaskManager.exe down http localhost 8164 /fcgi_DataWharf/ C:/Harbour_websites/fcgi_DataWharf/ DataWharf"
            },
            "linux":{
                "options": {
                    "cwd": "${workspaceFolder}",
                    "statusbar": {"label" : "<Down>","hide" : true}
                },
                "command": ""
            }
        },
        {
            "label": "ActivateDataWharf",
            "type": "shell",
            "isBackground": true,
            "presentation": {"reveal": "never"},
            "windows":{
                "command": "C:\\Harbour_FastCGI\\FCGITaskManagerBin\\FCGITaskManager.exe activate http localhost 8164 /fcgi_DataWharf/ C:/Harbour_websites/fcgi_DataWharf/ DataWharf",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "statusbar": {"label" : "<Activate DataWharf>","hide" : false}
                }
            },
            "linux":{
                "command": "",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "statusbar": {"label" : "<Activate DataWharf>","hide" : true}
                }
            }
        },
        // Instead of a "soft terminate" we can use the OS level application termination.
        // {
        //     "label": "KillDataWharf",
        //     "windows":{
        //         "type": "shell",
        //         "command": "C:\\Harbour_FastCGI\\FCGITaskManagerBin\\FCGITaskManager.exe kill http localhost 8164 /fcgi_DataWharf/ C:/Harbour_websites/fcgi_DataWharf/ DataWharf",
        //         "isBackground": true,
        //         "options": {
        //             "cwd": "${workspaceFolder}",
        //             "statusbar": {"label" : "<Kill DataWharf>","hide" : false}
        //         },
        //         "presentation": {"reveal": "never"}
        //     },
        //     "linux":{
        //         "type": "shell",
        //         "command": "/var/www/Harbour_FastCGI/FCGITaskManagerBin/FCGITaskManager.exe kill http localhost 80 /fcgi_DataWharf/ /var/www/Harbour_websites/fcgi_DataWharf/ DataWharf",
        //         "isBackground": true,
        //         "options": {
        //             "cwd": "${workspaceFolder}",
        //             "statusbar": {"label" : "<Kill DataWharf>","hide" : false}
        //         },
        //         "presentation": {"reveal": "never"}
        //     }
        // },
        {
            "label":"KillFcgiExe",
            "type": "shell",
            "options": {
                "statusbar": {"label" : "<Kill DataWharf>","hide" : false}
            },
            "windows":{
                "command":"taskkill",
                "args": ["/IM","FCGIDataWharf.exe","/f","/t"]
            },
            "linux":{
                "command":"killall",
                "args": ["FCGIDataWharf.exe"]
            }
        },
        {
            "label": "BrowseDataWharf",
            "type": "shell",
            "isBackground": true,
            "presentation": {"reveal": "never"},
            "windows":{
                "command":"explorer",
                "args": ["http://localhost:8164/fcgi_DataWharf/"],
                "options": {
                    "cwd": "${workspaceFolder}",
                    "statusbar": {"label" : "<Browse DataWharf>","hide" : false}
                }
            },
            "linux":{
                "command": "",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "statusbar": {"label" : "<Browse DataWharf>","hide" : true}
                }
            }
        }
        //The following tasks is no longer used since we are accessing a PostgreSQL on "localhost" or "host.docker.internal"
