    "version": "0.2.0",
    "configurations": [
    
        {
            "type": "harbour-dbg",
            "request": "attach",
            "name": "Attach Program DataWharf.exe",
            "windows":{
                "program": "R:\\Harbour_websites\\fcgi_DataWharf\\backend\\FCGIDataWharf.exe",
                "sourcePaths": [
                    "${workspaceFolder}",
                    "R:\\Harbour_ORM\\",
                    "R:\\Harbour_VFP\\"
                ]
            },
            "linux":{
                "program": "/etc/fcgi_DataWharf/backend/FCGIDataWharf.exe",
                "sourcePaths": [
                    "${workspaceFolder}",
                    "/etc/Harbour_ORM/",
                    "/etc/Harbour_VFP/"
                ]
            }
        }
    ]
}
