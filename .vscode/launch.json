    "version": "0.2.0",
    "configurations": [
    
        {
            "type": "harbour-dbg",
            "request": "attach",
            "name": "Attach Program DataDictionary.exe",
            "windows":{
                "program": "C:\\Harbour_websites\\fcgi_DataDictionary\\backend\\FCGIDataDictionary.exe",
                "sourcePaths": [
                    "${workspaceFolder}",
                    "C:\\Harbour_ORM\\",
                    "C:\\Harbour_VFP\\"
                ]
            },
            "linux":{
                "program": "/etc/fcgi_DataDictionary/backend/FCGIDataDictionary.exe",
                "sourcePaths": [
                    "${workspaceFolder}",
                    "/etc/Harbour_ORM/",
                    "/etc/Harbour_VFP/"
                ]
            }
        }
    ]
}
