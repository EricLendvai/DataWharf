    "version": "0.2.0",
    "configurations": [
    
        {
            "type": "harbour-dbg",
            "request": "attach",
            "name": "Attach Program DataWharf.exe",
            "windows":{
                "program": "C:\\Harbour_websites\\fcgi_DataWharf\\backend\\FCGIDataWharf.exe",
                "sourcePaths": [
                    "${workspaceFolder}",
                    "${workspaceFolder}\\src\\",
                    "C:\\Harbour_ORM\\",
                    "C:\\Harbour_VFP\\"
                ]
            },
            "linux":{
                "program": "/var/www/Harbour_websites/fcgi_DataWharf/backend/FCGIDataWharf.exe",
                "sourcePaths": [
                    "${workspaceFolder}/src/",
                    "/src/Harbour_ORM/",
                    "/src/Harbour_VFP/"
                ]
            }
        }
    ]
}
